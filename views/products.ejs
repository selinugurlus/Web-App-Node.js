    <body>
        <h1>
            Products.
        </h1>
        
        <ul>
            <% list.forEach(product => { %>

                <% if(product.isActive==true){%>

                <li>
                    <a href="/products/<%=product.id %>">
                        <%=product.name  %> <%= product.price %> 
                    </a>
                
                </li>
            <% } %>
            <% }) %>
        </ul>


    </body>
